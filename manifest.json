{
  "manifest_version": 3,
  "name": "Cookie Copier",
  "version": "1.0",
  "description": "Copy cookies from other domains to the current domain",
  "permissions": [
    "activeTab",
    "cookies"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}